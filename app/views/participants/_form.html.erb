<%= form_with model: @participant, local: true, html: { multipart: true } do |form| %>

  <% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@participant.errors.count, "error") %> prohibited
        this participant from being created:
      </h2>
      <ul>
        <% @participant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :role %><br>
    <%= form.select(:role,[['Interviewer','Interviewer'],['Interviewee','Interviewee']]) %>
  </p>

  <p>
    <%= form.label :resume %><br>
    <%= form.file_field :resume %>
  </p>

  <p>
    <%= form.submit %>
  </p>

  <br>
<% end %>
